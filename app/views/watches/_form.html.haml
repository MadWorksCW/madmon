= form_for @watch do |f|
  - if @watch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@watch.errors.count, "error")} prohibited this watch from being saved:"
      %ul
        - @watch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    
  .field
    = f.label :frequency
    = f.number_field :frequency
  .actions
    = f.submit 'Save'
